{{#each errors}}
<div class="alert alert-danger">
	{{text}}
</div>
{{else}}
{{/each}}
<h3>Nova Categoria</h3>
<div class="card">
	<div class="card-body">
		<form action="new" method="POST">
			<label for="name">Nome:</label>
			<input type="text" id="name" name="name" class="form-control" placeholder="Noma da categoria">
			<label for="slug">Slug:</label>
			<input type="text" id="slug" name="slug" class="form-control" placeholder="Slug da categoria">
			</br>
			<button type="submit" class="btn btn-success">Criar Categoria</button>
		</form>
	</div>
</div>
