	{{text}}
</div>
{{else}}
{{/each}}

<h3>Edição de Categoria</h3>
<div class="card">
<div class="card-body">
		<form action="/admin/category/edit" method="POST">
		<label for="name">Nome:</label>
		<input type="hidden" name="id" value={{category._id}}>
		<input type="text" id="name" name="name" class="form-control" placeholder="Noma da categoria" value="{{category.name}}">
		<label for="slug">Slug:</label>
		<input type="text" id="slug" name="slug" class="form-control" placeholder="Slug da categoria" value="{{category.slug}}">
		</br>
		<button type="submit" class="btn btn-success">Editar</button>
		</form>
</div>
</div>
